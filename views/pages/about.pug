extends ../base.pug

block variables
    - var template = 'about'

block content
    .about(data-background=about.background_color data-color=about.text_color)
      .about__wrapper
        section.about__header
          .about__header__title
            h1.about__header__title__text(data-animation="title")!=about.title.replace(/\n/g, '<br>')
          .about__header__media
            figure.about__media__figure
              img.about__media__figure__image(data-src=about.title_image.url alt=about.title_image.alt)

        section.about__background
            .about__background__gc
              .about__background__gc__smdesc
                p.about__background__gc__smdesc__text(data-animation="title")=about.sm_desc
              .about__background__gc__bg__title
                h2.about__background__gc__bg__title__text(data-animation="vertical")=about.background_title
              .about__background__desc
                each desc in about.background_desc
                  .about__background__desc__frame
                    p.about__background__desc__frame__text(data-animation='paragraph')=desc.background_desc_text

        section.about__clients
          .about__clients__title
            h2.about__clients__title__text(data-animation="title")=about.clients_title
          .about__clients__gallery
            .about__clients__gallery__wrapper
              each client in about.client_logos
                .about__clients__gallery__client
                  p.about__clients__gallery__client__name(data-animation='label')=client.client_name
                  figure.about__clients__gallery__client__media
                    img.about__clients__gallery__client__media__image(data-src=client.client_logo.url alt=client.client_logo.alt)

        section.about__desc
          .about__desc__gc
            .about__desc__gc__title
              h2.about__desc__gc__title__text(data-animation="vertical")=about.about_title
            .about__desc__gc__desc
              p.about__desc__gc__desc__text(data-animation='paragraph')!=about.about_desc.replace(/\n/g, '<br>')
          .about__desc__location
            p.about__desc__location__text(data-animation="vertical")=about.location

        section.about__contact
          .about__contact__title
            h2.about__contact__title__text(data-animation='title')=about.contact
          .about__contact__details
            p.about__contact__details__text(data-animation="paragraph")=about.contact_desc

        section.about__footer
          .about__footer__media
            figure.about__media__figure
              img.about__media__figure__image(data-src=about.footer_image.url alt=about.footer_image.alt)
          .about__footer__title
            p.about__footer__title__text(data-animation='title')=about.footer_title


